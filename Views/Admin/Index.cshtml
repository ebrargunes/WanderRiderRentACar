@model List<CarVM>


<div class="container">
    <h2 class="page-title">Admin Paneli</h2>
    <a class="btn mt-3 w-100" type="button" href="/Admin/CreateCar"><h3 class="page-subtitle">Yeni araç ekle</h3></a>
    @if (TempData["Message"] != null)
    {
        <h1>@TempData["Message"]</h1>
    }

    <div class="row">

        @foreach (var car in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="@car.ImageUrl" class="card-img-top" alt=@car.CarName>
                    <div class="card-body">

                        <h5 style="color: red;" class="card-title">@car.CarName</h5>
                        <p><i class="bi bi-geo-alt-fill"></i> &nbsp; @car.RentStoresName </p>
                        <p> <i class="bi bi-fuel-pump-diesel"></i> &nbsp;@car.FuelTypeName</p>
                        <p><i class="bi bi-car-front"></i> &nbsp;@car.SegmentName</p>
                        <p> <i class="bi bi-gear-wide-connected"> </i> &nbsp;@car.TransmissionName</p>
                        <p>@car.DepositPrice TL</p>
                        <form method="post" action="/Admin/RemoveCar?carId=@car.CarId">
                            <input type="hidden" asp-for="@car.CarId" />
                            <button type="submit" id="reserveBtn" class="btn btn-primary mt-3 w-100">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                            <a class="btn btn-primary " type="button" href="/Admin/UpdateCar?carId=@car.CarId">
                                <i class="fas fa-car"></i>
                                Güncelle
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        }

    </div>


</div>
