@model LoginVM

<style>
  .mb-3 {
    margin-bottom: 1rem !important;
  }

  .form-label {
    margin-bottom: 0.5rem;
    font-size: 2rem;
    font-weight: 500;
    display: inline-block;
  }

  .form-control {
    display: block;
    width: 50%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    border: 2px solid  #2a2d54;
    border-radius: 0.375rem;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    height: 40px;
    
  }
  .container {
    justify-content: center;
    align-items: center;
    padding: 0 15px;
   
  }

  .form-container {
    width: 50%; 
    max-width: 600px;
    margin: 0 auto;
   
  }
  .admin{justify-content: center;
    align-items: center;
    margin-top: 5rem;
    margin-bottom: 2rem;}
</style>
<div class="container">
  
  <div class="form-container">
    
    <form action="/Admin/Login" method="POST" style="margin-top: 15rem;">
    <h4 class="admin">Admin Paneline Hoşgeldiniz</h4>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Kullanıcı İsmi</label>
        <input type="text" class="form-control" asp-for="UserName"
          placeholder="Lütfen Kullanıcı Adınızı Giriniz">
        <span asp-validation-for="UserName" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Şifre</label>
        <input type="password" class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-primary" style="height:40px; margin-bottom: 4rem;">Giriş Yap</button>

      <div>
        @if (TempData["Message"] != null)
        {
          <h1>@TempData["Message"]</h1>
        }
      </div>

    </form>
  </div>
</div>